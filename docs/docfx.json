{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "markdownEngineProperties": {
      "markdigExtensions": [
          "Abbreviations",
          "Footnotes"
      ],
      "plantUml": {
        "outputFormat": "svg",
        "remoteUrl": "http://www.plantuml.com/plantuml/",
        "renderingMode": "remote"
      }
    },
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Komprese stromov\u00FDch struktur",
      "_appTitle": "Komprese stromov\u00FDch struktur",
      "_enableSearch": true,
      "pdf": true
    }
  }
}